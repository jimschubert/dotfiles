export EDITOR="vim"
export LC_ALL="en_US.UTF-8"
export LANG="en_US"
export MANPAGER="less -X"
export HISTIGNORE="&:ls:ls *:cd:cd -:pwd:exit:date:* --help:* -h:* --hard HEAD"
export HISTCONTROL="ignoredups"

export GOPATH=$HOME/projects/go
export GOARCH=386
export GOOS=linux

# don't overwrite existing files with stdout redirection
set -o noclobber

# case-insensitive globbing (used in pathname expansion)
shopt -s nocaseglob

#Keep multiline commands as one command in history
shopt -s cmdhist
